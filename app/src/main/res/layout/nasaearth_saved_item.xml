<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/earthsavedimage"
        android:layout_width="80dp"
        android:layout_height="100dp"
        />
    <TextView
        android:id="@+id/earthsavedlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/earthsavedimage"
        android:text="lat"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/earthsavedlon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/earthsavedimage"
        android:layout_below="@+id/earthsavedlat"
        android:text="lon"
        />

    <TextView
        android:id="@+id/earthsaveddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/earthsavedimage"
        android:layout_below="@+id/earthsavedlon"
        android:text="date"
        />

</RelativeLayout>
